{{input tpye="text" id="new-todo" placeholder="What needs to be done?"
value=newTitle action="createTodo"}}

<section id="main">
  <ul id="todo-list">
    <li class="completed">
      <input type="checkbox" class="toggle">
      <label>Learn Ember</label>
    </li>

    {{#each}}
    <li {{bind-attr class="isComplated:completed"}}>
      <input type="checkbox" class="toggle">
      <label>{{title}}</label><button class="destroy"></button>
    </li>
    {{/each}}
  </ul>

  <input type="checkbox" id="toggle-all">
</section>

<footer id="footer">
  <span id="count">
    <strong>2</strong> todos left
  </span>
  {{#each}}
  <ul id="filters">
    <li>
      <a href="all" class="selected">All</a>
    </li>

    <li>
      <a href="active">Active</a>
    </li>

    <li>
      <a href="completed">Completed</a>
    </li>
  </ul>
  {{/each}}

  <button id="clear-completed">
    Clear completed (1)
  </button>
</footer>
